<p>
  <%= form_for @movies, url: movies_path do |f| %>
      <%= f.label "Name" %><br>
      <%= f.text_field :name %><br>

      <%= f.label "Year" %><br>
      <%= f.text_field :year %><br>

      <%= f.label "Synopsis" %><br>
      <%= f.text_area :synopsis %><br>

      <%= f.submit "Create Movie" %>
  <% end %>
</p>
