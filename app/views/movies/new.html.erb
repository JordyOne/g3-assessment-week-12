<% if @movie %>
    <% if @movie.errors %>
        <% @movie.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    <% end %>
<% end %>


<p>
  <%= form_for @movie, url: movies_path do |f| %>
      <%= f.label "Name" %><br>
      <%= f.text_field :name, id:"Name" %><br>

      <%= f.label "Year" %><br>
      <%= f.text_field :year, id:"Year" %><br>

      <%= f.label "Synopsis" %><br>
      <%= f.text_area :synopsis, id:"Synopsis" %><br>

      <%= f.submit "Create Movie" %>
  <% end %>
</p>
